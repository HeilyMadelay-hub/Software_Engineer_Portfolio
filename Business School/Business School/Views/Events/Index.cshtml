@model IEnumerable<Business_School.ViewModels.Event.EventListVM>
@{
 ViewData["Title"] = "Eventos";
}

<div class="container mt-4">
    <!-- Header -->
 <div class="row mb-4">
   <div class="col-md-6">
   <h2>
  <i class="bi bi-calendar-event"></i> Eventos Académicos
   </h2>
     </div>
   <div class="col-md-6 text-end">
      @if (User.IsInRole("Student"))
 {
       <a asp-controller="Dashboard" asp-action="Student" class="btn btn-outline-secondary me-2">
          <i class="bi bi-arrow-left"></i> Volver al Dashboard
       </a>
   }
      else
      {
       <a asp-controller="Departments" asp-action="Index" class="btn btn-outline-secondary me-2">
  <i class="bi bi-arrow-left"></i> Volver a Departamentos
    </a>
    }
            
      @if (User.IsInRole("Admin") || User.IsInRole("DepartmentManager") || User.IsInRole("ClubLeader"))
          {
     <a asp-action="Create" class="btn btn-success me-2">
        <i class="bi bi-plus-circle"></i> Crear Evento
     </a>
}

 <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
    <button type="submit" class="btn btn-danger">
       <i class="bi bi-box-arrow-right"></i> Cerrar sesión
  </button>
  </form>
   </div>
    </div>

    <!-- Alerts -->
    @if (TempData["Success"] != null)
    {
    <div class="alert alert-success alert-dismissible fade show" role="alert">
          <i class="bi bi-check-circle"></i> @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle"></i> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
    }

    @if (Model.Any())
    {
   <!-- Tabla de eventos -->
        <div class="card shadow-sm">
   <div class="card-body">
        <div class="table-responsive">
       <table class="table table-hover align-middle mb-0">
    <thead class="table-light">
    <tr>
         <th><i class="bi bi-card-heading"></i> Título</th>
         <th><i class="bi bi-calendar3"></i> Fecha</th>
       <th><i class="bi bi-building"></i> Departamento</th>
       <th><i class="bi bi-people"></i> Clubs</th>
        <th class="text-center"><i class="bi bi-person-check"></i> Registrados</th>
        <th class="text-center" style="width: 200px;">Acciones</th>
    </tr>
         </thead>
       <tbody>
        @foreach (var evt in Model)
       {
          <tr>
                <td>
       <strong>@evt.Title</strong>
   </td>
      <td>
       <i class="bi bi-calendar-check"></i> @evt.StartDate.ToString("dd/MM/yyyy")
     <br />
       <small class="text-muted"><i class="bi bi-clock"></i> @evt.StartDate.ToString("HH:mm")</small>
         </td>
     <td>
     @if (!string.IsNullOrEmpty(evt.DepartmentName))
       {
               <span class="badge bg-secondary">@evt.DepartmentName</span>
     }
      else
      {
     <span class="text-muted">-</span>
             }
    </td>
              <td>
     @if (evt.Clubs != null && evt.Clubs.Any())
        {
      <small>@string.Join(", ", evt.Clubs.Take(2))</small>
     @if (evt.Clubs.Count() > 2)
             {
         <span class="text-muted">...</span>
         }
    }
     else
   {
      <span class="text-muted">-</span>
       }
       </td>
          <td class="text-center">
           <span class="badge bg-info">@evt.RegisteredCount</span>
     </td>
        <td class="text-center">
    <div class="btn-group" role="group">
         <a asp-action="Details" asp-route-id="@evt.Id" class="btn btn-sm btn-outline-primary">
      <i class="bi bi-eye"></i> Ver
   </a>
           
        @if (User.IsInRole("Admin") || User.IsInRole("DepartmentManager") || User.IsInRole("ClubLeader"))
        {
      <a asp-action="Edit" asp-route-id="@evt.Id" class="btn btn-sm btn-outline-warning">
       <i class="bi bi-pencil"></i> Editar
   </a>
  }
   
       @if (User.IsInRole("Admin"))
        {
          <a asp-action="Delete" asp-route-id="@evt.Id" class="btn btn-sm btn-outline-danger">
       <i class="bi bi-trash"></i>
          </a>
            }
           </div>
         </td>
        </tr>
       }
         </tbody>
      </table>
   </div>
    </div>
    </div>
    }
    else
    {
   <div class="card shadow-sm">
            <div class="card-body text-center py-5">
    <i class="bi bi-calendar-x" style="font-size: 4rem; color: #6c757d;"></i>
      <h4 class="mt-3">No hay eventos disponibles</h4>
         <p class="text-muted">No se encontraron eventos programados en este momento.</p>
        @if (User.IsInRole("Admin") || User.IsInRole("DepartmentManager") || User.IsInRole("ClubLeader"))
       {
        <a asp-action="Create" class="btn btn-success mt-3">
    <i class="bi bi-plus-circle"></i> Crear Primer Evento
  </a>
        }
    </div>
      </div>
    }
</div>

<style>
    .table tbody tr {
        transition: background-color 0.2s;
    }

    .table tbody tr:hover {
        background-color: #f8f9fa;
    }
</style>