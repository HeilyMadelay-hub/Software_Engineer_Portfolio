@model Business_School.Models.Department
@{
    ViewData["Title"] = "Editar Departamento";
    // ViewBag.Managers should be populated in controller (SelectList)
}

<h2 class="mt-4 mb-3">Editar Departamento</h2>

<div class="card">
    <div class="card-body">
        <form asp-action="Edit" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />

            <div class="mb-3">
                <label asp-for="Name" class="form-label">Nombre</label>
                <input asp-for="Name" class="form-control" placeholder="Nombre del departamento" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label">Correo electrónico</label>
                <input asp-for="Email" class="form-control" type="email" placeholder="correo@empresa.com" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="PhoneNumber" class="form-label">Teléfono</label>
                <input asp-for="PhoneNumber" class="form-control" placeholder="Ej: +34 600 000 000" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="OfficeLocation" class="form-label">Ubicación de la oficina</label>
                <input asp-for="OfficeLocation" class="form-control" placeholder="Ej: Edificio A, Piso 3" />
                <span asp-validation-for="OfficeLocation" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Responsable (opcional)</label>
                <select asp-for="ManagerUserId" class="form-select" asp-items="ViewBag.Managers">
                    <option value="">-- Sin responsable --</option>
                </select>
                <span asp-validation-for="ManagerUserId" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Guardar</button>
            <a asp-action="Index" class="btn btn-secondary ms-2">Cancelar</a>
        </form>
    </div>
</div>
