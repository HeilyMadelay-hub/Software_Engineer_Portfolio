@using Business_School.ViewModels
@model DepartmentFormViewModel
@{
    ViewData["Title"] = "Editar Departamento";
}

<h2 class="mt-4 mb-3">Editar Departamento</h2>

<div class="card">
    <div class="card-body">
        <form asp-action="Edit" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Department.Id" />
            <input type="hidden" asp-for="ReturnUrl" />

            <div class="mb-3">
                <label asp-for="Department.Name" class="form-label">Nombre</label>
                <input asp-for="Department.Name" class="form-control" placeholder="Nombre del departamento" />
                <span asp-validation-for="Department.Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Department.Email" class="form-label">Correo electrónico</label>
                <input asp-for="Department.Email" class="form-control" type="email" placeholder="correo@empresa.com" />
                <span asp-validation-for="Department.Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Department.PhoneNumber" class="form-label">Teléfono</label>
                <input asp-for="Department.PhoneNumber" class="form-control" placeholder="Ej: +34 600 000 000" />
                <span asp-validation-for="Department.PhoneNumber" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Department.OfficeLocation" class="form-label">Ubicación de la oficina</label>
                <input asp-for="Department.OfficeLocation" class="form-control" placeholder="Ej: Edificio A, Piso 3" />
                <span asp-validation-for="Department.OfficeLocation" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Responsable (opcional)</label>
                <select asp-for="Department.ManagerUserId" class="form-select" asp-items="@(new SelectList(Model.Managers, "Id", "FullName", Model.Department.ManagerUserId))">
                    <option value="">-- Sin responsable --</option>
                </select>
                <span asp-validation-for="Department.ManagerUserId" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Guardar</button>
            @if (!string.IsNullOrEmpty(Model.ReturnUrl))
            {
                <a href="@Model.ReturnUrl" class="btn btn-secondary ms-2">Cancelar</a>
            }
            else
            {
                <a asp-action="Index" class="btn btn-secondary ms-2">Cancelar</a>
            }
        </form>
    </div>
</div>
