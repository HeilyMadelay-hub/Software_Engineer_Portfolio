@model Business_School.Models.ApplicationUser
@{
    ViewData["Title"] = "Perfil del Usuario";
    var returnDeptId = ViewData["ReturnDepartmentId"] as int?;
}

<div class="container mt-4">
    <div class="row mb-3">
        <div class="col-md-6">
            <h2><i class="bi bi-person-circle"></i> Perfil: @Model.FullName</h2>
        </div>
        @if (!User.IsInRole("Admin"))
        {
            <div class="col-md-6 text-end">
                @if (returnDeptId.HasValue)
                {
                    <a asp-controller="Departments" asp-action="Details" asp-route-id="@returnDeptId.Value" class="btn btn-outline-secondary me-2">
                        <i class="bi bi-arrow-left"></i> Volver al Departamento
                    </a>
                }
                else
                {
                    <a asp-controller="Departments" asp-action="Index" class="btn btn-outline-secondary me-2">
                        <i class="bi bi-arrow-left"></i> Volver a Departamentos
                    </a>
                }
                <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-box-arrow-right"></i> Cerrar sesión
                    </button>
                </form>
            </div>
        }
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Nombre</dt>
                <dd class="col-sm-9">@Model.FullName</dd>

                <dt class="col-sm-3">Email</dt>
                <dd class="col-sm-9"><a href="mailto:@Model.Email">@Model.Email</a></dd>

                <dt class="col-sm-3">Departamento</dt>
                <dd class="col-sm-9">@Model.Department?.Name</dd>

                <dt class="col-sm-3">Puntos</dt>
                <dd class="col-sm-9">@Model.Points</dd>

                <dt class="col-sm-3">Nivel</dt>
                <dd class="col-sm-9">@Model.Level</dd>
            </dl>
        </div>
    </div>
</div>
