@model Business_School.ViewModels.Students.StudentProfileVM
@{
 ViewData["Title"] = "Mi Perfil";
}

<h2>Mi Perfil</h2>

<div class="card mb-3">
 <div class="card-body">
 <h5>@Model.FullName</h5>
 <p><strong>Email:</strong> @Model.Email</p>
 <p><strong>Nivel:</strong> @Model.Level</p>
 <p><strong>Puntos:</strong> @Model.Points</p>
 </div>
</div>

<h4>Mis Clubs</h4>
<ul>
 @foreach (var club in Model.Clubs)
 {
 <li>@club</li>
 }
</ul>

<h4>Eventos</h4>
<table class="table">
 <thead>
 <tr>
 <th>Título</th>
 <th>Fecha</th>
 <th>Asistido</th>
 </tr>
 </thead>
 <tbody>
 @foreach (var e in Model.UpcomingEvents)
 {
 <tr>
 <td>@e.Name</td>
 <td>@e.Date</td>
 <td>@(e.Attended ? "Sí" : "No")</td>
 </tr>
 }
 </tbody>
</table>

<h4>Logros</h4>
<ul>
 @foreach (var a in Model.Achievements)
 {
 <li>
 <strong>@a.Title:</strong> @a.Description
 </li>
 }
</ul>
