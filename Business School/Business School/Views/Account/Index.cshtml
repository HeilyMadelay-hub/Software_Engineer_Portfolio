@model IEnumerable<Business_School.Models.Department>
@{
    ViewData["Title"] = "My Account";
}

<div class="container mt-4">

    <div class="text-center mb-4">
        <h2 class="fw-bold">
            <i class="bi bi-person-circle"></i> My Account
        </h2>
        <p class="text-muted">Gestiona tu informacion con rapidas acciones</p>
        <hr />
    </div>

    <div class="row g-4">
        <!-- Account Info -->
        <div class="col-md-6">
            <div class="card border-0 shadow">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-info-circle"></i> Informacion de la Cuenta
                    </h5>
                </div>

                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-4">Email:</dt>
                        <dd class="col-sm-8">@User.Identity?.Name</dd>

                        <dt class="col-sm-4">Role:</dt>
                        <dd class="col-sm-8">
                            @if (User.IsInRole("Admin"))
                            {
                                <span class="badge bg-danger">Admin</span>
                            }
                            else if (User.IsInRole("DepartmentManager"))
                            {
                                <span class="badge bg-warning text-dark">Department Manager</span>
                            }
                            else if (User.IsInRole("ClubLeader"))
                            {
                                <span class="badge bg-info text-dark">Club Leader</span>
                            }
                            else if (User.IsInRole("Student"))
                            {
                                <span class="badge bg-success">Student</span>
                            }
                        </dd>
                    </dl>
                </div>
            </div>
        </div>

        <!-- Quick Actions -->
        <div class="col-md-6">
            <div class="card border-0 shadow">
                <div class="card-header bg-secondary text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-lightning"></i> Atajos
                    </h5>
                </div>

                <div class="card-body">
                    <div class="d-grid gap-2">

                        @if (User.IsInRole("Student"))
                        {
                            <a asp-controller="Students" asp-action="Profile" class="btn btn-outline-primary">
                                <i class="bi bi-person"></i> Mi Perfil
                            </a>

                            <a asp-controller="Clubs" asp-action="MyClubs" class="btn btn-outline-success">
                                <i class="bi bi-people"></i> Mis Clubs
                            </a>

                            <a asp-controller="Events" asp-action="MyEvents" class="btn btn-outline-info">
                                <i class="bi bi-calendar-event"></i> Mis Eventos
                            </a>
                        }

                        @if (User.IsInRole("Admin"))
                        {
                            <a asp-controller="Admin" asp-action="Users" class="btn btn-outline-danger">
                                <i class="bi bi-people-fill"></i> Gestion Usuarios
                            </a>
                        }

                        <a asp-controller="Dashboard" asp-action="Index" class="btn btn-outline-dark">
                            <i class="bi bi-speedometer2"></i> Dashboard
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Logout -->
    <div class="text-center mt-4">
        <form asp-action="Logout" method="post">
            <button type="submit" class="btn btn-danger px-4">
                <i class="bi bi-box-arrow-right"></i> Logout
            </button>
        </form>
    </div>

    <!-- Welcome Section -->
    <div class="mt-5 p-5 bg-light shadow-sm rounded">
        <h1 class="display-5 fw-bold mb-3">Welcome to Business School</h1>
        <p class="lead">Create departments, clubs, and manage users from the navigation menu.</p>
        <hr />
        <p class="text-muted mb-0">Use the top navigation bar to explore the system.</p>
    </div>
</div>
