@model Business_School.Models.ViewModels.RegisterVM
@{
    ViewData["Title"] = "Registro";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-8 col-lg-6">
        <div class="card shadow">
            <div class="card-body p-4">
                <h2 class="text-center mb-4">
                    <i class="bi bi-person-plus"></i> Crear cuenta
                </h2>

                <form asp-action="Register" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    <input type="hidden" asp-for="ReturnUrl" />

                    <!-- First Name -->
                    <div class="form-group mb-3">
                        <label asp-for="FirstName" class="form-label"></label>
                        <div class="input-group">
                            <span class="input-group-text">
                                <i class="bi bi-person"></i>
                            </span>
                            <input asp-for="FirstName" class="form-control" placeholder="Tu nombre" />
                        </div>
                        <span asp-validation-for="FirstName" class="text-danger small"></span>
                    </div>

                    <!-- Last Name -->
                    <div class="form-group mb-3">
                        <label asp-for="LastName" class="form-label"></label>
                        <div class="input-group">
                            <span class="input-group-text">
                                <i class="bi bi-person-badge"></i>
                            </span>
                            <input asp-for="LastName" class="form-control" placeholder="Tu apellido" />
                        </div>
                        <span asp-validation-for="LastName" class="text-danger small"></span>
                    </div>

                    <!-- Email -->
                    <div class="form-group mb-3">
                        <label asp-for="Email" class="form-label"></label>
                        <div class="input-group">
                            <span class="input-group-text">
                                <i class="bi bi-envelope"></i>
                            </span>
                            <input asp-for="Email" class="form-control"
                                   placeholder="tu.email@escueladenegocios.com"
                                   autocomplete="username" />
                        </div>
                        <span asp-validation-for="Email" class="text-danger small"></span>
                        <div class="form-text">
                            Usa tu correo institucional
                        </div>
                    </div>

                    <!-- Password -->
                    <div class="form-group mb-3">
                        <label asp-for="Password" class="form-label"></label>
                        <div class="input-group">
                            <span class="input-group-text">
                                <i class="bi bi-lock"></i>
                            </span>
                            <input asp-for="Password" class="form-control"
                                   placeholder="Crea una contraseña segura"
                                   autocomplete="new-password" />
                        </div>
                        <span asp-validation-for="Password" class="text-danger small"></span>
                        <div class="form-text">
                            Mínimo 6 caracteres
                        </div>
                    </div>

                    <!-- Confirm Password -->
                    <div class="form-group mb-3">
                        <label asp-for="ConfirmPassword" class="form-label"></label>
                        <div class="input-group">
                            <span class="input-group-text">
                                <i class="bi bi-lock-fill"></i>
                            </span>
                            <input asp-for="ConfirmPassword" class="form-control"
                                   placeholder="Reingresa tu contraseña"
                                   autocomplete="new-password" />
                        </div>
                        <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                    </div>

                    <!-- Level -->
                    <div class="form-group mb-3">
                        <label asp-for="Level" class="form-label"></label>
                        <select asp-for="Level" class="form-select" asp-items="Html.GetEnumSelectList<StudentLevel>()">
                            <option value="">Selecciona el nivel</option>
                        </select>
                        <span asp-validation-for="Level" class="text-danger small"></span>
                    </div>

                    <!-- Department -->
                    <div class="form-group mb-3">
                        <label asp-for="DepartmentId" class="form-label"></label>
                        <select asp-for="DepartmentId" class="form-select" asp-items="Model.DepartmentList">
                        </select>
                        <span asp-validation-for="DepartmentId" class="text-danger small"></span>
                    </div>

                    <!-- Terms -->
                    <div class="form-check mb-3">
                        <input asp-for="TermsAccepted" class="form-check-input" />
                        <label asp-for="TermsAccepted" class="form-check-label"></label>
                        <span asp-validation-for="TermsAccepted" class="text-danger small d-block"></span>
                    </div>

                    <!-- Info Alert -->
                    <div class="alert alert-info" role="alert">
                        <i class="bi bi-info-circle"></i>
                        <strong>Nota:</strong> Después de registrarte tendrás el rol de usuario, un administrador actualizará tu perfil
                    </div>

                    <!-- Submit Button -->
                    <div class="d-grid gap-2 mb-3">
                        <button type="submit" class="btn btn-success btn-lg">
                            <i class="bi bi-person-check"></i> Crear cuenta
                        </button>
                    </div>

                    <!-- Links -->
                    <div class="text-center">
                        <p class="mb-0">
                            ¿Ya tienes una cuenta?
                            <a asp-action="Login" asp-route-returnUrl="@ViewData["ReturnUrl"]">
                                Inicia sesión aquí
                            </a>
                        </p>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
