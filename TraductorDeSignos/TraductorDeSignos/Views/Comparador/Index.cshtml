@{
    ViewData["Title"] = "Comparador de Gestos";
}

@section Styles {
    <link rel="stylesheet" href="~/css/Comparador/index.css">
}

<div class="container-fluid px-4 py-4">
    <!-- HEADER CON BOTONES DE CONTROL -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card header-card">
                <div class="card-body p-4">
                    <div class="d-flex flex-wrap justify-content-between align-items-center gap-3">
                        <!-- Título -->
                        <div>
                            <h2 class="text-white mb-0 fw-bold">
                                Opciones
                            </h2>
                        </div>

                        <!-- Botones de Control y Estado de Conexión -->
                        <div class="d-flex flex-wrap gap-2 align-items-center">
                            <!-- Botones de Control -->
                            <button id="btnToggleComparison" class="btn btn-success">
                                <i class="bi bi-play-fill me-2"></i>Iniciar
                            </button>
                            <button id="btnCapture" class="btn btn-primary" disabled>
                                <i class="bi bi-camera me-2"></i>Capturar
                            </button>
                            <button id="btnReset" class="btn btn-secondary">
                                <i class="bi bi-arrow-clockwise me-2"></i>Reset
                            </button>

                            <!-- Separador visual (opcional) -->
                            <div class="vr bg-white opacity-25" style="width: 2px; height: 30px;"></div>

                            <!-- Badge de Conexión -->
                            <div id="connectionStatus" class="badge bg-secondary px-3 py-2 fs-6">
                                <i class="bi bi-circle-fill me-1"></i>Desconectado
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- SELECTOR DE GESTO -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-body p-4">
                    <label class="form-label fw-bold mb-3">
                       Selecciona el gesto a practicar:
                    </label>
                    <div class="d-flex flex-wrap gap-2 justify-content-center" id="gestureButtons">
                        <button type="button" class="btn btn-outline-primary gesture-btn" data-gesture="a">A</button>
                        <button type="button" class="btn btn-outline-primary gesture-btn" data-gesture="e">E</button>
                        <button type="button" class="btn btn-outline-primary gesture-btn" data-gesture="i">I</button>
                        <button type="button" class="btn btn-outline-primary gesture-btn" data-gesture="o">O</button>
                        <button type="button" class="btn btn-outline-primary gesture-btn" data-gesture="u">U</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- COMPARACIÓN SIDE BY SIDE -->
    <div class="row g-4 mb-4">
        <!-- TU GESTO -->
        <div class="col-lg-6">
            <div class="card h-100">
                <div class="card-header bg-info text-white py-3">
                    <h5 class="mb-0"><i class="bi bi-camera-video me-2"></i>Tu Gesto (En Vivo)</h5>
                </div>
                <div class="card-body p-0">
                    <div class="video-container" style="height: 400px;">
                        <video id="videoElement" autoplay playsinline style="display:none;"></video>
                        <canvas id="userCanvas" style="width:100%; height:100%;"></canvas>
                        <div id="userStatus" class="status-badge badge bg-secondary">
                            <i class="bi bi-hourglass-split me-1"></i>Esperando...
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-white p-3">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <span class="text-muted">Gesto Detectado:</span>
                        <span id="userGesture" class="badge bg-secondary fs-6">-</span>
                    </div>
                    <div class="d-flex align-items-center">
                        <span class="text-muted me-2">Confianza:</span>
                        <div class="progress flex-grow-1" style="height: 25px;">
                            <div id="userConfidence" class="progress-bar bg-info" style="width: 0%;">0%</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- GESTO IDEAL -->
        <div class="col-lg-6">
            <div class="card h-100">
                <div class="card-header bg-success text-white py-3">
                    <h5 class="mb-0"><i class="bi bi-star me-2"></i>Gesto Ideal (Referencia)</h5>
                </div>
                <div class="card-body p-0">
                    <div class="reference-container d-flex align-items-center justify-content-center" style="height: 400px;">
                        <canvas id="referenceCanvas" style="width:100%; height:100%;"></canvas>
                        <div id="referencePlaceholder" class="text-center position-absolute">
                            <i class="bi bi-hand-index text-white-50" style="font-size: 80px;"></i>
                            <p class="text-white-50 mt-3 mb-0">Selecciona un gesto arriba</p>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-white p-3">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <span class="text-muted">Gesto Seleccionado:</span>
                        <span id="referenceGesture" class="badge bg-success fs-6">-</span>
                    </div>
                    <div class="d-flex justify-content-between align-items-center">
                        <span class="text-muted">Desviación:</span>
                        <span id="deviation" class="badge bg-secondary">-</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- FEEDBACK VISUAL -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-warning text-dark py-3">
                    <h5 class="mb-0"><i class="bi bi-lightbulb me-2"></i>Feedback Visual</h5>
                </div>
                <div class="card-body">
                    <div class="row align-items-center">
                        <!-- CÍRCULO DE SIMILITUD -->
                        <div class="col-md-4 text-center py-3">
                            <h6 class="text-muted mb-3">Similitud Global</h6>
                            <div class="similarity-circle">
                                <svg viewBox="0 0 100 100" width="160" height="160">
                                    <circle cx="50" cy="50" r="45" fill="none" stroke="#eee" stroke-width="8" />
                                    <circle id="similarityCircle" cx="50" cy="50" r="45" fill="none"
                                            stroke="#28a745" stroke-width="8"
                                            stroke-dasharray="283" stroke-dashoffset="283"
                                            style="transition: stroke-dashoffset 0.5s;" />
                                </svg>
                                <div class="similarity-value">
                                    <h2 id="similarityPercent" class="mb-0 fw-bold">0%</h2>
                                </div>
                            </div>
                        </div>

                        <!-- EMOJI Y TEXTO -->
                        <div class="col-md-4 text-center py-3">
                            <h6 class="text-muted mb-3">Evaluación</h6>
                            <div id="feedbackEmoji" class="feedback-emoji">??</div>
                            <h4 id="feedbackText" class="mt-3 mb-0">Selecciona un gesto</h4>
                        </div>

                        <!-- DIFERENCIAS -->
                        <div class="col-md-4 py-3">
                            <h6 class="text-muted mb-3">Sugerencias</h6>
                            <div id="differencesList">
                                <div class="diff-item">
                                    <i class="bi bi-info-circle me-2"></i>Esperando comparación...
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/@@mediapipe/hands/hands.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/@@mediapipe/camera_utils/camera_utils.js" crossorigin="anonymous"></script>
    <script src="~/js/modules/comparador.js"></script>
}