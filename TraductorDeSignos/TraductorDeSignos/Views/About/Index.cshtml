                <!-- Letra U -->
                <div class="col-lg-4 col-md-6">
                    <div class="gesture-card hover-lift">
                        <div class="gesture-image-wrapper">
                            <img src="/img/About/u.png" alt="Gesto letra U">
                        </div>
                        <div class="text-center">
                            <div class="gesture-letter">U</div>
                            <p class="gesture-name">Letra U</p>
                            <span class="gesture-badge">Vocal</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- CTA Section -->
    <section class="cta-section py-5 text-white text-center">
        <div class="container">
            <h2 class="h1 fw-bold mb-3">¿Listo para probarlo?</h2>
            <p class="lead mb-4">
                Experimenta el reconocimiento de gestos en tiempo real
            </p>
            <a href="/" class="btn btn-primary btn-lg">
                <i class="bi bi-play-circle-fill me-2"></i>
                Probar Ahora
            </a>
        </div>
    </section>
</div>

