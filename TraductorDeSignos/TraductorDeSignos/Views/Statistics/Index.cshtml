@{
    ViewData["Title"] = "Estadísticas en Tiempo Real";
}

@section Styles {
    <link rel="stylesheet" href="~/css/Statics/index.css">
}

<div class="container-fluid px-4 py-4">
   
    <!-- VISTA COMBINADA: VIDEO + MÉTRICAS -->
    <div class="row g-4 mb-4">
        <!-- VIDEO DETECTOR -->
        <div class="col-xl-4 col-lg-5">
            <div class="card video-stats-card h-100">
                <div class="card-header bg-transparent border-0 p-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="mb-0 fw-bold">
                            <i class="bi bi-camera-video-fill text-primary me-2"></i>Detector en Vivo
                        </h5>
                        <span class="badge camera-badge">
                            <i class="bi bi-record-circle me-1"></i>REC
                        </span>
                    </div>
                </div>
                <div class="card-body p-3 pt-0">
                    <div class="video-container-stats">
                        <video id="webcam-video" autoplay playsinline muted></video>
                        <canvas id="tracking-canvas"></canvas>

                        <!-- Gesture Display Overlay -->
                        <div id="gesture-display" class="gesture-display-stats">
                            <div class="gesture-content">
                                <i class="bi bi-hand-index-thumb"></i>
                                <span class="gesture-text">Esperando...</span>
                            </div>
                        </div>

                        <!-- Corner Decorations -->
                        <div class="video-overlay-stats">
                            <div class="corner-decoration top-left"></div>
                            <div class="corner-decoration top-right"></div>
                            <div class="corner-decoration bottom-left"></div>
                            <div class="corner-decoration bottom-right"></div>
                        </div>
                    </div>

                    <!-- Quick Stats bajo el video -->
                    <div class="quick-stats mt-3">
                        <div class="quick-stat-item">
                            <i class="bi bi-hand-index-thumb text-info"></i>
                            <span id="quickGesture" class="quick-value">-</span>
                        </div>
                        <div class="quick-stat-item">
                            <i class="bi bi-percent text-success"></i>
                            <span id="quickConfidence" class="quick-value">0%</span>
                        </div>
                        <div class="quick-stat-item">
                            <i class="bi bi-speedometer2 text-warning"></i>
                            <span id="quickFps" class="quick-value">30</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- MÉTRICAS PRINCIPALES -->
        <div class="col-xl-8 col-lg-7">
            <div class="row g-3">
                <div class="col-md-4 col-6">
                    <div class="card metric-card h-100">
                        <div class="card-body p-3">
                            <div class="d-flex justify-content-between align-items-start mb-2">
                                <div>
                                    <p class="metric-label mb-1">Total Detecciones</p>
                                    <h2 id="totalDetections" class="metric-value mb-0">0</h2>
                                </div>
                                <div class="icon-wrapper" style="background: linear-gradient(135deg, rgba(99, 102, 241, 0.15) 0%, rgba(139, 92, 246, 0.15) 100%);">
                                    <i class="bi bi-bullseye text-primary fs-5"></i>
                                </div>
                            </div>
                            <div class="progress">
                                <div class="progress-bar" role="progressbar" style="width: 100%; background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);"></div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-4 col-6">
                    <div class="card metric-card h-100">
                        <div class="card-body p-3">
                            <div class="d-flex justify-content-between align-items-start mb-2">
                                <div>
                                    <p class="metric-label mb-1">Confianza Promedio</p>
                                    <h2 id="avgConfidence" class="metric-value mb-0">0%</h2>
                                </div>
                                <div class="icon-wrapper" style="background: linear-gradient(135deg, rgba(16, 185, 129, 0.15) 0%, rgba(5, 150, 105, 0.15) 100%);">
                                    <i class="bi bi-check-circle text-success fs-5"></i>
                                </div>
                            </div>
                            <div class="progress">
                                <div class="progress-bar" role="progressbar" style="width: 0%; background: linear-gradient(135deg, #10b981 0%, #059669 100%);" id="confidenceBar"></div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-4 col-6">
                    <div class="card metric-card h-100">
                        <div class="card-body p-3">
                            <div class="d-flex justify-content-between align-items-start mb-2">
                                <div>
                                    <p class="metric-label mb-1">Gesto Más Usado</p>
                                    <h2 id="mostUsed" class="metric-value mb-0">-</h2>
                                </div>
                                <div class="icon-wrapper" style="background: linear-gradient(135deg, rgba(6, 182, 212, 0.15) 0%, rgba(14, 165, 233, 0.15) 100%);">
                                    <i class="bi bi-hand-index text-info fs-5"></i>
                                </div>
                            </div>
                            <div class="progress">
                                <div class="progress-bar" role="progressbar" style="width: 100%; background: linear-gradient(135deg, #06b6d4 0%, #0ea5e9 100%);"></div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-4 col-6">
                    <div class="card metric-card h-100">
                        <div class="card-body p-3">
                            <div class="d-flex justify-content-between align-items-start mb-2">
                                <div>
                                    <p class="metric-label mb-1">Racha Actual</p>
                                    <h2 id="currentStreak" class="metric-value mb-0">0</h2>
                                </div>
                                <div class="icon-wrapper" style="background: linear-gradient(135deg, rgba(239, 68, 68, 0.15) 0%, rgba(249, 115, 22, 0.15) 100%);">
                                    <i class="bi bi-fire text-danger fs-5"></i>
                                </div>
                            </div>
                            <div class="d-flex align-items-center">
                                <small class="text-muted">Máx: </small>
                                <small id="maxStreak" class="text-danger fw-bold ms-1">0</small>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-4 col-6">
                    <div class="card metric-card h-100">
                        <div class="card-body p-3">
                            <div class="d-flex justify-content-between align-items-start mb-2">
                                <div>
                                    <p class="metric-label mb-1">Velocidad Prom.</p>
                                    <h2 id="avgSpeed" class="metric-value mb-0">-</h2>
                                </div>
                                <div class="icon-wrapper" style="background: linear-gradient(135deg, rgba(168, 85, 247, 0.15) 0%, rgba(139, 92, 246, 0.15) 100%);">
                                    <i class="bi bi-lightning-charge text-purple fs-5" style="color: #a855f7 !important;"></i>
                                </div>
                            </div>
                            <small class="text-muted">Entre gestos</small>
                        </div>
                    </div>
                </div>

                <div class="col-md-4 col-6">
                    <div class="card metric-card h-100">
                        <div class="card-body p-3">
                            <div class="d-flex justify-content-between align-items-start mb-2">
                                <div>
                                    <p class="metric-label mb-1">FPS Promedio</p>
                                    <h2 id="avgFps" class="metric-value mb-0">30</h2>
                                </div>
                                <div class="icon-wrapper" style="background: linear-gradient(135deg, rgba(245, 158, 11, 0.15) 0%, rgba(217, 119, 6, 0.15) 100%);">
                                    <i class="bi bi-speedometer2 text-warning fs-5"></i>
                                </div>
                            </div>
                            <div class="progress">
                                <div class="progress-bar" role="progressbar" style="width: 100%; background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- GRÁFICOS -->
    <div class="row g-4 mb-4">
        <div class="col-lg-6">
            <div class="card chart-card h-100">
                <div class="card-header">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="mb-0 fw-bold">
                            <i class="bi bi-bar-chart-fill text-primary me-2"></i>Frecuencia de Gestos
                        </h5>
                        <span class="badge" style="background: linear-gradient(135deg, rgba(99, 102, 241, 0.15) 0%, rgba(139, 92, 246, 0.15) 100%); color: #6366f1;">
                            <i class="bi bi-clock me-1"></i>Tiempo Real
                        </span>
                    </div>
                </div>
                <div class="card-body p-4">
                    <canvas id="graficoFrecuencia" height="280"></canvas>
                </div>
            </div>
        </div>

        <div class="col-lg-6">
            <div class="card chart-card h-100">
                <div class="card-header">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="mb-0 fw-bold">
                            <i class="bi bi-graph-up text-success me-2"></i>Evolución de Confianza
                        </h5>
                        <span class="badge" style="background: linear-gradient(135deg, rgba(16, 185, 129, 0.15) 0%, rgba(5, 150, 105, 0.15) 100%); color: #059669;">
                            <i class="bi bi-collection me-1"></i>Últimas 20
                        </span>
                    </div>
                </div>
                <div class="card-body p-4">
                    <canvas id="graficoConfianza" height="280"></canvas>
                </div>
            </div>
        </div>
    </div>

    <!-- HISTORIAL DE DETECCIONES -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card history-card">
                <div class="card-header bg-white border-0 p-4">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="mb-0 fw-bold">
                            <i class="bi bi-clock-history text-dark me-2"></i>Historial de Detecciones
                        </h5>
                        <span class="badge" style="background: linear-gradient(135deg, rgba(107, 114, 128, 0.15) 0%, rgba(75, 85, 99, 0.15) 100%); color: #4b5563;">
                            <i class="bi bi-list-ol me-1"></i>Últimas 10
                        </span>
                    </div>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead>
                                <tr>
                                    <th class="ps-4">#</th>
                                    <th>Gesto</th>
                                    <th>Confianza</th>
                                    <th>Timestamp</th>
                                    <th class="pe-4">Separación</th>
                                </tr>
                            </thead>
                            <tbody id="historialBody">
                                <tr>
                                    <td colspan="5" class="text-center">
                                        <div class="empty-state">
                                            <i class="bi bi-hourglass-split d-block"></i>
                                            <p class="mb-0 mt-3">Esperando detecciones...</p>
                                        </div>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- CONTROLES -->
    <div class="row">
        <div class="col-12">
            <div class="card control-card">
                <div class="card-body p-4">
                    <div class="d-flex flex-wrap gap-3 align-items-center">
                        <button id="btnReset" class="btn btn-control btn-reset">
                            <i class="bi bi-arrow-clockwise me-2"></i>Resetear Estadísticas
                        </button>
                        <button id="btnExport" class="btn btn-control btn-export">
                            <i class="bi bi-download me-2"></i>Exportar CSV
                        </button>
                        <button id="btnPause" class="btn btn-control btn-pause">
                            <i class="bi bi-pause-fill me-2"></i>Pausar
                        </button>
                        <div id="statusIndicator" class="ms-auto status-indicator">
                            <span id="statusDot" class="status-dot"></span>
                            <span id="statusText" class="text-success fw-semibold">Sistema Activo</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <!-- Chart.js -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <!-- MediaPipe Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/@@mediapipe/hands/hands.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/@@mediapipe/drawing_utils/drawing_utils.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/@@mediapipe/camera_utils/camera_utils.js" crossorigin="anonymous"></script>

    <!-- Hand Detection for Statistics Page -->
    <script type="module" src="/js/modules/statistics-detector.js"></script>

    <!-- Custom Scripts -->
    <script src="/js/modules/statistics.js"></script>
}